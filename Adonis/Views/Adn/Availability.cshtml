@model Adonis.Models.Availability

@{
    ViewBag.Title = "Availability";
}

<h2>Availability</h2>

<div id="container">
    <div id="List">

    </div>
    <div id="Forms">

        <label>CREATE AVAILABILITY</label>
        <div id="FormCreate">
            <form method="post" action="CreateAvailabilityAction">
                Description:<input type="text" id="description" name="description" /><br />
                <input type="submit" value="Create" />
            </form>
        </div>

        <br />

        <label>EDIT AVAIABILITY</label>
        <div id="FormEdit">
            <form method="post" action="EditAvailabilityAction">
                Name:<input type="text" id="newName" name="newName" />
                Status:
                <select id="Activated" name="Activated">
                    <option value="1">Activated</option>
                    <option value="0">DeActivated</option>
                </select>
                <br />
                <input type="submit" value="Update" />
                <input type="hidden" id="OldId" name="OldId" />
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        showAvailabilityList();
    });
</script>